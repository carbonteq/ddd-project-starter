{
    "compilerOptions": {
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "allowSyntheticDefaultImports": true,
        "module": "CommonJS",
        "moduleResolution": "Node",
        "noImplicitAny": false,
        "outDir": "./build",
        "preserveConstEnums": true,
        "removeComments": true,
        "sourceMap": true,
        "skipLibCheck": true,
        "allowJs": true,
        "target": "es2020",
        "typeRoots": [
            "./node_modules/@types"
        ],
        "lib": [
          "es2020",
          "es2020.promise",
          "es2020.bigint",
          "es2020.string",
          "dom"
        ],
        "baseUrl": "./",
        "paths": {
            "@application/*": ["App/Application/*"],
            "@domain/*": ["App/Domain/*"],
            "@http/*": ["HTTP/*"],
            "@controller/*": ["HTTP/Controllers/*"],
            "@routes/*": ["HTTP/Routes/*"],
            "@infrastructure/*": ["App/Infrastructure/*"],
            "@bootstrap/*":["HTTP/Bootstrap/*"]
        }
    },
    "include": [
        "App/**/*.ts",
        "Bin",
        "HTTP/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
        "build"
    ]
}